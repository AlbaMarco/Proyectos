<Application x:Class="AppDI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:noe="clr-namespace:NoesisGUIExtensions;assembly=Noesis.GUI.Extensions"
             xmlns:local="clr-namespace:AppDI"
             StartupUri="/Pags/PagPrincipal.xaml"
    xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2" Startup="Application_Startup">
    <Application.Resources>
        
        <FontFamily x:Key="PkmFont">pack://application:,,,/Fuentes/#Pokemon Hollow</FontFamily>
        <FontFamily x:Key="PkmFontBold">pack://application:,,,/Fuentes/#Pokemon Solid</FontFamily>
        <FontFamily x:Key="PkmMonk">pack://application:,,,/Fuentes/#Pocket Monk</FontFamily>
        <FontFamily x:Key="PkmGB">pack://application:,,,/Fuentes/#Pokemon GB</FontFamily>

        <!-- Centrar total de un Label. -->
        <Style x:Key="CentradoTotalLb" TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Centrar total de un TextBlock -->
        <Style x:Key="CentradoTotalTBlock" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Texto justificado con 25px de tamaño de letra y centrado -->
        <Style x:Key="TxtJustificado25px" TargetType="TextBlock">
            <Setter Property="FontSize" Value="25px"/>
            <Setter Property="TextAlignment" Value="Justify"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Para los títulos que son imagen. -->
        <Style x:Key="ImgTitulo" TargetType="Image">
            <Setter Property="Width" Value="350"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <!-- Botones de la sección "Pokedex" -->
        <Style x:Key="BtnGeneracion" TargetType="RadioButton">
            <Setter Property="Height" Value="20"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Background" Value="LightSteelBlue"/>
        </Style>

        <!-- Botones de la sección de Movimientos de mi TabItem -->
        <Style x:Key="BtnsMovimientos" TargetType="RadioButton">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <!-- TextBlock de la sección de Movimiento de mi TabItem -->
        <Style x:Key="TBMovimiento" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmGB}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="20, 5, 0, 0"/>
        </Style>

        <!-- Forma de los items de un comboBox. -->
        <Style x:Key="ItemsComboMov" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="SteelBlue"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmGB}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Gold"/>
        </Style>

        <!-- TextBlock de la sección de Tipos de mi TabItem -->
        <Style x:Key="TBTipos" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmGB}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="5, 5, 0, 0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- TextBlock de la sección de Pokebolas -->
        <Style x:Key="TBPokebolas" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmGB}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="5, 5, 5, 5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Estilo que tienen los Listbox en la sección de Pokebolas-->
        <Style x:Key="StyleLBPokebolas" TargetType="ListBox">
            <Setter Property="Width" Value="650"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="SelectedIndex" Value="0"/>
            <Setter Property="Background" Value="LightSteelBlue"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Disabled"/>
        </Style>
        <!-- Cada ListBox de la sección de Pokeballs -->
        <DataTemplate x:Key="LbPokebolas"> <!-- Tamaño de 650 y 70 de alto.-->
            <StackPanel Orientation="Horizontal">
                <Image Source="{Binding Imagen}" Width="50" Height="50" Margin="0, -20, 5, 0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding NomPkball}" Width="100" Height="50" TextAlignment="Left" VerticalAlignment="Center" HorizontalAlignment="Center" 
                           FontSize="14" FontFamily="{StaticResource PkmGB}" FontWeight="Bold" TextWrapping="Wrap"/>
                <TextBlock Text="{Binding Descripcion}" Width="450" Height="70" TextAlignment="Justify" VerticalAlignment="Center"
                           HorizontalAlignment="Center" FontSize="11" FontFamily="{StaticResource PkmGB}"  
                           Margin="0, 20, 5, 5" TextWrapping="Wrap"/>
            </StackPanel>
        </DataTemplate>

        <!-- Label que hay presente en la seccion de Pokeballs de mi TabItem. -->
        <Style x:Key="LabelPokebolas" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmGB}"/>
            <Setter Property="FontSize" Value="10"/>
        </Style>

        <!-- Los botones que hay presentes en la sección de Pokeballs de mi TabItem. -->
        <Style x:Key="btnsPokebolas" TargetType="Button">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#3761a8"/>
            <Setter Property="Foreground" Value="Gold"/>
        </Style>

        <!-- Forma de los elementos del ListBox de la sección de la Pokedex de mi TabItem. -->
        <DataTemplate x:Key="ImagenesLBoxItem">
            <StackPanel Orientation="Horizontal">
                <Image Source="{Binding Imagen}" Width="60" Height="60" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="-8, 0, 0, 0"/>
                <TextBlock Text="{Binding NomPkm}" Margin="0,0,0,0" TextAlignment="Left" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="10" FontFamily="{StaticResource PkmGB}"/>
            </StackPanel>
        </DataTemplate>

        <!-- Listbox con la forma de los textBlock que hay en la derecha de la pokedex. -->
        <DataTemplate x:Key="LBoxInfoPkx">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="65"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding TituloPkm}" HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Left" Margin="0, 0, 5, 5" FontSize="11" FontFamily="{StaticResource PkmGB}" FontWeight="Bold"/>
                <TextBlock Grid.Column="1" Text="{Binding NomPkm}" HorizontalAlignment="Right" VerticalAlignment="Center" TextAlignment="Right" Margin="-5, 0, 0, 0" FontSize="10" FontFamily="{StaticResource PkmGB}"/>
            </Grid>
        </DataTemplate>


        <!-- Textblock de la página AdminControl de la izquierda. -->
        <Style x:Key="tblockAdmin" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Width" Value="670"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextAlignment" Value="Justify"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Botones del control de usuario Expander usando en la ventana de Administración. -->
        <Style x:Key="btnExpanderAdmin" TargetType="Button">
            <Setter Property="Background" Value="#3761a8"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="BorderBrush" Value="Gold"/>
            <Setter Property="Margin" Value="0, 5, 0, 5"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <!-- Estilo de los títulos del control de usuario TabItem. -->
        <Style x:Key="titulosTabItem" TargetType="TextBlock">
            <Setter Property="Height" Value="10"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmGB}"/>
            <Setter Property="FontSize" Value="8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="100"/>
        </Style>

        <!-- Estilos de los títulos Header del DataGrid usado en la lista de usuarios. -->
        <Style x:Key="titulosDataGridLista"  TargetType="DataGridColumnHeader">
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#3761a8"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <!-- Estilo general del dataGrid de lista usuarios. -->
        <Style x:Key="dataGrid" TargetType="{x:Type DataGrid}">
            <Setter Property="Background" Value="#3761a8"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="Gold"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="RowBackground" Value="#3761a8"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="AutoGenerateColumns" Value="True"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserResizeColumns" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="CanUserSortColumns" Value="False"/>
            <Setter Property="ColumnWidth" Value="*"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmFontBold}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="ColumnHeaderStyle" Value="{StaticResource titulosDataGridLista}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <!-- Estilo de un listbox. -->
        <Style x:Key="estiloListBox" TargetType="ListBox">
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Background" Value="#3761a8"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="BorderBrush" Value="Gold"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        
        <!-- Botones de ModificacionNivel -->
        <Style x:Key="btnModNivel" TargetType="Button">
            <Setter Property="Background" Value="#3761a8"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="BorderBrush" Value="Gold"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
        </Style>

        <!-- Título TxtBlock de ModificacionNivel - AddNuevosUsers -->
        <Style x:Key="txtBlockModNivel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="TextAlignment" Value="Justify"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>

        <!-- Estilo de las label de ModificacionNivel - AddNuevosUsers -->
        <Style x:Key="labelModNivel" TargetType="Label">
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Estilo de los textBox de ModificacionNivel -->
        <Style x:Key="textBoxModNivel" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmFontBold}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="BorderBrush" Value="Gold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Estilo de los textBox de AddNuevosUsers -->
        <Style x:Key="textBoxAddNuevoUser" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmFontBold}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="BorderBrush" Value="Gold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
        </Style>

        <!-- Estilo de las label de Eliminar Usuarios - EliminarUsuarios -->
        <Style x:Key="labelElimUsers" TargetType="Label">
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>

        <!-- Estilo de los radio Buttons de Modificar admin - ModificarAdmin -->
        <Style x:Key="raBtnModAdmin" TargetType="RadioButton">
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Background" Value="Gold"/>
        </Style>

        <!-- Botones de ModificacionAdmin -->
        <Style x:Key="btnModAdmin" TargetType="Button">
            <Setter Property="Background" Value="#3761a8"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="BorderBrush" Value="Gold"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>

        <!-- Estilo del textBox de Registro. -->
        <Style x:Key="textBoxRegistro" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmFontBold}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="Red"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Gold"/>
        </Style>

        <!-- Estilo de los textBox de Registro. -->
        <Style x:Key="passBoxRegistro" TargetType="PasswordBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Estilo de las label de la pantalla de registro. -->
        <Style x:Key="labelRegistro" TargetType="Label">
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Forma de los elementos del ListBox de la sección gratuita en la búsqueda. -->
        <DataTemplate x:Key="ImaLBoxItemBusqueda">
            <StackPanel Orientation="Horizontal">
                <Image Source="{Binding Imagen}" Width="80" Height="80" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="-8, 0, 0, 0"/>
                <TextBlock Text="{Binding NomPkm}" Margin="0" TextAlignment="Left" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" FontFamily="{StaticResource PkmMonk}"/>
            </StackPanel>
        </DataTemplate>

        <!-- Estilo del textBox de Gratuito. -->
        <Style x:Key="tboxGratuito" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmFontBold}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Width" Value="220"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="Gold"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Botones de acceso Grautito -->
        <Style x:Key="btnGratuito" TargetType="Button">
            <Setter Property="Background" Value="#3761a8"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="BorderBrush" Value="Gold"/>
            <Setter Property="Width" Value="220"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>

        <!-- Estilo del label de Gratuito. -->
        <Style x:Key="labelkGratuito" TargetType="Label">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="Gold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Gold"/>
        </Style>


        <!-- Estilo del textBlock de Gratuito. -->
        <Style x:Key="tblockGratuito" TargetType="TextBlock">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Forma de los elementos del ListBox de la sección gratuita en las imagenes, formas. -->
        <DataTemplate x:Key="ImaLBoxItemForma">
            <StackPanel Orientation="Horizontal">
                <Image Source="{Binding ImaFront}" Width="50" Height="50" Margin="-8, -5, 20, 0"/>
                <Image Source="{Binding ImaBack}" Width="50" Height="50" Margin="-8, -5, 20, 0"/>
                <Image Source="{Binding ImaShinyFront}" Width="50" Height="50" Margin="-8, -5, 20, 0"/>
                <Image Source="{Binding ImaShinyBack}" Width="50" Height="50" Margin="-8, -5, 20, 0"/>
            </StackPanel>
        </DataTemplate>

        <!-- Imagenes del apartado Items de Evolución -->
        <Style x:Key= "ImgItemEvoluciones" TargetType="Image">
            <Setter Property="Width" Value="75"/>
            <Setter Property="Height" Value="75"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="Margin" Value="10, 0, 0, 0"/>
        </Style>

        <!-- TextBlock del apartado de Items de Evolución -->
        <Style x:Key="TBItemEvoluciones" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="TextAlignment" Value="Justify"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmGB}"/>
            <Setter Property="FontStretch" Value="Normal"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="10, 0, 0, 0"/>
        </Style>

        <Style x:Key="LBItemEvoluciones" TargetType="ListBox">
            <Setter Property="Height" Value="400"/>
            <Setter Property="Width" Value="550"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmGB}"/>
            <Setter Property="Background" Value="LightSteelBlue"/>
        </Style>


        <!-- Estilos de los títulos Header del DataGrid usado TabItem, plantillas Arceus. -->
        <Style x:Key="titulosDataGridListaArceus"  TargetType="DataGridColumnHeader">
            <Setter Property="FontFamily" Value="{StaticResource PkmGB}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#3761a8"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <Style x:Key="filasDGArceus" TargetType="DataGridCell">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Estilo general del dataGrid usado TabItem, plantillas Arceus. -->
        <Style x:Key="dataGridArceus" TargetType="{x:Type DataGrid}">
            <Setter Property="Background" Value="#3761a8"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="BorderBrush" Value="Gold"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="RowBackground" Value="#3761a8"/>
            <Setter Property="GridLinesVisibility" Value="Vertical"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserResizeColumns" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="CanUserSortColumns" Value="False"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmGB}"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="ColumnHeaderStyle" Value="{StaticResource titulosDataGridListaArceus}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Boton de Soporte Técnico -->
        <Style x:Key="btnSopTecnico" TargetType="Button">
            <Setter Property="Background" Value="#3761a8"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="BorderBrush" Value="Gold"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
        </Style>

        <!-- Textbox de soporte Técnico. -->
        <Style x:Key="txtBoxSopTecnico" TargetType="TextBox">
            <Setter Property="Background" Value="LightBlue"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="FontSize" Value="24"/>
        </Style>

        <!-- Combo box items para las vitaminas.-->
        <Style x:Key="ItemsComboVitaminas" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="SteelBlue"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmGB}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Gold"/>
        </Style>

        <Style x:Key="ComboVitaminas" TargetType="ComboBox">
            <Setter Property="Background" Value="SteelBlue"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmGB}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="1000"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="BorderBrush" Value="Gold"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>


        <!-- Estilo de las label de sección de Vitaminas - AddNuevosUsers -->
        <Style x:Key="labelVitaminas" TargetType="Label">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
