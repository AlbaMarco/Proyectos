<Application x:Class="AppDI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:noe="clr-namespace:NoesisGUIExtensions;assembly=Noesis.GUI.Extensions"
             xmlns:local="clr-namespace:AppDI"
             StartupUri="/Pags/PagPrincipal.xaml">
    <Application.Resources>
        
        <FontFamily x:Key="PkmFont">pack://application:,,,/Fuentes/#Pokemon Hollow</FontFamily>
        <FontFamily x:Key="PkmFontBold">pack://application:,,,/Fuentes/#Pokemon Solid</FontFamily>
        <FontFamily x:Key="PkmMonk">pack://application:,,,/Fuentes/#Pocket Monk</FontFamily>
        <FontFamily x:Key="PkmGB">pack://application:,,,/Fuentes/#Pokemon GB</FontFamily>

        <!-- Centrar total de un Label. -->
        <Style x:Key="CentradoTotalLb" TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Centrar total de un TextBlock -->
        <Style x:Key="CentradoTotalTBlock" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Texto justificado con 25px de tamaño de letra y centrado -->
        <Style x:Key="TxtJustificado25px" TargetType="TextBlock">
            <Setter Property="FontSize" Value="25px"/>
            <Setter Property="TextAlignment" Value="Justify"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Para los títulos que son imagen. -->
        <Style x:Key="ImgTitulo" TargetType="Image">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <!-- Botones de la sección "Pokedex" -->
        <Style x:Key="BtnGeneracion" TargetType="RadioButton">
            <Setter Property="Height" Value="20"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Background" Value="LightSteelBlue"/>
        </Style>

        <!-- Botones de la sección de Movimientos de mi TabItem -->
        <Style x:Key="BtnsMovimientos" TargetType="RadioButton">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <!-- TextBlock de la sección de Movimiento de mi TabItem -->
        <Style x:Key="TBMovimiento" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmGB}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="20, 5, 0, 0"/>
        </Style>

        <!-- Forma de los items de un comboBox. -->
        <Style x:Key="ItemsComboMov" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="SteelBlue"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmGB}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Gold"/>
        </Style>

        <!-- TextBlock de la sección de Tipos de mi TabItem -->
        <Style x:Key="TBTipos" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmGB}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="5, 5, 0, 0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- TextBlock de la sección de Pokebolas -->
        <Style x:Key="TBPokebolas" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmGB}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="5, 5, 5, 5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="StyleLBPokebolas" TargetType="ListBox">
            <Setter Property="Width" Value="500"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <!-- Cada ListBox de la sección de Pokeballs -->
        <DataTemplate x:Key="LbPokebolas"> <!-- Tamaño de 300 y 70 de alto.-->
            <StackPanel Orientation="Horizontal">
                <Image Source="{Binding Imagen}" Width="35" Height="35" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="-5, -20, 5, 5"/>
                <TextBlock Text="{Binding NomPkball}" Width="80" Height="30" TextAlignment="Left" VerticalAlignment="Center" HorizontalAlignment="Center" 
                           FontSize="9" FontFamily="{StaticResource PkmGB}" Margin="0, -20, 5, 0" FontWeight="Bold" TextWrapping="Wrap"/>
                <TextBlock Text="{Binding Descripcion}" Width="160" Height="70" TextAlignment="Justify" VerticalAlignment="Center"
                           HorizontalAlignment="Center" FontSize="7" FontFamily="{StaticResource PkmGB}"  
                           Margin="0, 20, 5, 5" TextWrapping="Wrap"/>
            </StackPanel>
        </DataTemplate>

        <!-- Label que hay presente en la seccion de Pokeballs de mi TabItem. -->
        <Style x:Key="LabelPokebolas" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmGB}"/>
            <Setter Property="FontSize" Value="10"/>
        </Style>

        <!-- Los botones que hay presentes en la sección de Pokeballs de mi TabItem. -->
        <Style x:Key="btnsPokebolas" TargetType="Button">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#3761a8"/>
            <Setter Property="Foreground" Value="Gold"/>
        </Style>

        <!-- Forma de los elementos del ListBox de la sección de la Pokedex de mi TabItem. -->
        <DataTemplate x:Key="ImagenesLBoxItem">
            <StackPanel Orientation="Horizontal">
                <Image Source="{Binding Imagen}" Width="40" Height="40" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="-8, 0, 0, 0"/>
                <TextBlock Text="{Binding NomPkm}" Margin="0,0,0,0" TextAlignment="Left" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="7" FontFamily="{StaticResource PkmGB}"/>
            </StackPanel>
        </DataTemplate>

        <!-- Listbox con la forma de los textBlock que hay en la derecha de la pokedex. -->
        <DataTemplate x:Key="LBoxInfoPkx">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding TituloPkm}" HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Left" Margin="0, 0, 5, 5" FontSize="7" FontFamily="{StaticResource PkmGB}" FontWeight="Bold"/>
                <TextBlock Grid.Column="1" Text="{Binding NomPkm}" HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Left" Margin="-5, 0, 0, 0" FontSize="7" FontFamily="{StaticResource PkmGB}"/>
            </Grid>
        </DataTemplate>


        <!-- Textblock de la página AdminControl de la izquierda. -->
        <Style x:Key="tblockAdmin" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextAlignment" Value="Justify"/>
            <Setter Property="Foreground" Value="Gold"/>
        </Style>

        <!-- Botones del control de usuario Expander usando en la ventana de Administración. -->
        <Style x:Key="btnExpanderAdmin" TargetType="Button">
            <Setter Property="Background" Value="#3761a8"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="BorderBrush" Value="Gold"/>
            <Setter Property="Margin" Value="0, 10, 0, 10"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="20"/>
        </Style>

        <!-- Estilo de los títulos del control de usuario TabItem. -->
        <Style x:Key="titulosTabItem" TargetType="TextBlock">
            <Setter Property="Height" Value="10"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmGB}"/>
            <Setter Property="FontSize" Value="8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="100"/>
        </Style>

        <!-- Estilos de los títulos Header del DataGrid usado en la lista de usuarios. -->
        <Style x:Key="titulosDataGridLista"  TargetType="DataGridColumnHeader">
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#3761a8"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <!-- Estilo general del dataGrid de lista usuarios. -->
        <Style x:Key="dataGrid" TargetType="{x:Type DataGrid}">
            <Setter Property="Background" Value="#3761a8"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="Gold"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="RowBackground" Value="#3761a8"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="AutoGenerateColumns" Value="True"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserResizeColumns" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="CanUserSortColumns" Value="False"/>
            <Setter Property="ColumnWidth" Value="*"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmFontBold}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="ColumnHeaderStyle" Value="{StaticResource titulosDataGridLista}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <!-- Estilo de un listbox. -->
        <Style x:Key="estiloListBox" TargetType="ListBox">
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#3761a8"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="BorderBrush" Value="Gold"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        
        <!-- Botones de ModificacionNivel -->
        <Style x:Key="btnModNivel" TargetType="Button">
            <Setter Property="Background" Value="#3761a8"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="BorderBrush" Value="Gold"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="20"/>
        </Style>

        <!-- Título TxtBlock de ModificacionNivel - AddNuevosUsers -->
        <Style x:Key="txtBlockModNivel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextAlignment" Value="Justify"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>

        <!-- Estilo de las label de ModificacionNivel - AddNuevosUsers -->
        <Style x:Key="labelModNivel" TargetType="Label">
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="90"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Estilo de los textBox de ModificacionNivel -->
        <Style x:Key="textBoxModNivel" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmFontBold}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="90"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="BorderBrush" Value="Gold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Estilo de los textBox de AddNuevosUsers -->
        <Style x:Key="textBoxAddNuevoUser" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmFontBold}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="BorderBrush" Value="Gold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
        </Style>

        <!-- Estilo de las label de Eliminar Usuarios - EliminarUsuarios -->
        <Style x:Key="labelElimUsers" TargetType="Label">
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>

        <!-- Estilo de los radio Buttons de Modificar admin - ModificarAdmin -->
        <Style x:Key="raBtnModAdmin" TargetType="RadioButton">
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Background" Value="Gold"/>
        </Style>

        <!-- Botones de ModificacionAdmin -->
        <Style x:Key="btnModAdmin" TargetType="Button">
            <Setter Property="Background" Value="#3761a8"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="BorderBrush" Value="Gold"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Estilo del textBox de Registro. -->
        <Style x:Key="textBoxRegistro" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmFontBold}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="Red"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Gold"/>
        </Style>

        <!-- Estilo de los textBox de Registro. -->
        <Style x:Key="passBoxRegistro" TargetType="PasswordBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Estilo de las label de la pantalla de registro. -->
        <Style x:Key="labelRegistro" TargetType="Label">
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Forma de los elementos del ListBox de la sección gratuita en la búsqueda. -->
        <DataTemplate x:Key="ImaLBoxItemBusqueda">
            <StackPanel Orientation="Horizontal">
                <Image Source="{Binding Imagen}" Width="80" Height="80" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="-8, 0, 0, 0"/>
                <TextBlock Text="{Binding NomPkm}" Margin="0" TextAlignment="Left" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" FontFamily="{StaticResource PkmMonk}"/>
            </StackPanel>
        </DataTemplate>

        <!-- Estilo del textBox de Gratuito. -->
        <Style x:Key="tboxGratuito" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmFontBold}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Width" Value="220"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="Gold"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Botones de acceso Grautito -->
        <Style x:Key="btnGratuito" TargetType="Button">
            <Setter Property="Background" Value="#3761a8"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="BorderBrush" Value="Gold"/>
            <Setter Property="Width" Value="220"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>

        <!-- Estilo del label de Gratuito. -->
        <Style x:Key="labelkGratuito" TargetType="Label">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="Gold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Gold"/>
        </Style>


        <!-- Estilo del textBlock de Gratuito. -->
        <Style x:Key="tblockGratuito" TargetType="TextBlock">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="{StaticResource PkmMonk}"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Foreground" Value="Gold"/>
        </Style>

        <!-- Forma de los elementos del ListBox de la sección gratuita en las imagenes, formas. -->
        <DataTemplate x:Key="ImaLBoxItemForma">
            <StackPanel Orientation="Horizontal">
                <Image Source="{Binding ImaFront}" Width="50" Height="50" Margin="-8, -5, 20, 0"/>
                <Image Source="{Binding ImaBack}" Width="50" Height="50" Margin="-8, -5, 20, 0"/>
                <Image Source="{Binding ImaShinyFront}" Width="50" Height="50" Margin="-8, -5, 20, 0"/>
                <Image Source="{Binding ImaShinyBack}" Width="50" Height="50" Margin="-8, -5, 20, 0"/>
            </StackPanel>
        </DataTemplate>


        
        
        <!-- Estilo usado en las barrar de los dataGrid. [SCROLL BAR] -->
        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" StrokeDashArray="1 2" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" SnapsToDevicePixels="true" StrokeThickness="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="ScrollBar.Static.Background" Color="#3761a8"/>
        <SolidColorBrush x:Key="ScrollBar.Static.Border" Color="Gold"/>
        <SolidColorBrush x:Key="ScrollBar.Static.Glyph" Color="Gold"/>
        <SolidColorBrush x:Key="ScrollBar.Static.Thumb" Color="Gold"/>
        <SolidColorBrush x:Key="ScrollBar.MouseOver.Background" Color="#3761a8"/>
        <SolidColorBrush x:Key="ScrollBar.MouseOver.Border" Color="Gold"/>
        <SolidColorBrush x:Key="ScrollBar.MouseOver.Glyph" Color="Gold"/>
        <SolidColorBrush x:Key="ScrollBar.MouseOver.Thumb" Color="Gold"/>
        <SolidColorBrush x:Key="ScrollBar.Pressed.Background" Color="#3761a8"/>
        <SolidColorBrush x:Key="ScrollBar.Pressed.Border" Color="Gold"/>
        <SolidColorBrush x:Key="ScrollBar.Pressed.Thumb" Color="Gold"/>
        <SolidColorBrush x:Key="ScrollBar.Pressed.Glyph" Color="Gold"/>
        <SolidColorBrush x:Key="ScrollBar.Disabled.Background" Color="#3761a8"/>
        <SolidColorBrush x:Key="ScrollBar.Disabled.Border" Color="Gold"/>
        <SolidColorBrush x:Key="ScrollBar.Disabled.Glyph" Color="Gold"/>
        <Style x:Key="RepeatButtonTransparent" TargetType="{x:Type RepeatButton}">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RepeatButton}">
                        <Rectangle Fill="{TemplateBinding Background}" Height="{TemplateBinding Height}" Width="{TemplateBinding Width}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ScrollBarButton" TargetType="{x:Type RepeatButton}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RepeatButton}">
                        <Border x:Name="border" Background="{StaticResource ScrollBar.Static.Background}" BorderBrush="{StaticResource ScrollBar.Static.Border}" BorderThickness="1" SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource ScrollBar.MouseOver.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource ScrollBar.MouseOver.Border}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource ScrollBar.Pressed.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource ScrollBar.Pressed.Border}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Opacity" TargetName="contentPresenter" Value="0.56"/>
                                <Setter Property="Background" TargetName="border" Value="{StaticResource ScrollBar.Disabled.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource ScrollBar.Disabled.Border}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ScrollBarThumbVertical" TargetType="{x:Type Thumb}">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Rectangle x:Name="rectangle" Fill="{StaticResource ScrollBar.Static.Thumb}" Height="{TemplateBinding Height}" SnapsToDevicePixels="True" Width="{TemplateBinding Width}"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Fill" TargetName="rectangle" Value="{StaticResource ScrollBar.MouseOver.Thumb}"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="true">
                                <Setter Property="Fill" TargetName="rectangle" Value="{StaticResource ScrollBar.Pressed.Thumb}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ScrollBarThumbHorizontal" TargetType="{x:Type Thumb}">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Rectangle x:Name="rectangle" Fill="{StaticResource ScrollBar.Static.Thumb}" Height="{TemplateBinding Height}" SnapsToDevicePixels="True" Width="{TemplateBinding Width}"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Fill" TargetName="rectangle" Value="{StaticResource ScrollBar.MouseOver.Thumb}"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="true">
                                <Setter Property="Fill" TargetName="rectangle" Value="{StaticResource ScrollBar.Pressed.Thumb}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ScrollBarStyle1" TargetType="{x:Type ScrollBar}">
            <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="false"/>
